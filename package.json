{
  "name": "@barelyhuman/stone",
  "version": "0.0.5",
  "description": "Framework Agnostic Theme based css-in-js",
  "main": "dist/index.js",
  "repository": "git@github.com:barelyhuman/stone.git",
  "author": "Reaper <ahoy@barelyhuman.dev>",
  "license": "MIT",
  "types": "dist/*.d.ts",
  "files": [
    "dist/*"
  ],
  "keywords": [
    "css-in-js",
    "stone",
    "css",
    "framework agnostic",
    "style"
  ],
  "scripts": {
    "prebuild": "shx rm -rf dist",
    "build": "tsc",
    "watch": "tsc --watch",
    "fix": "wrap --fix",
    "test": "uvu -r esm tests",
    "size": "GITHUB_TOKEN='' bundlesize",
    "prepublishOnly": "npm run build;npm run size;"
  },
  "bundlesize": [
    {
      "path": "./dist/**/*.js",
      "maxSize": "4 kB",
      "compression": "brotli"
    },
    {
      "path": "./dist/**/*.js",
      "maxSize": "4 kB"
    }
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@barelyhuman/tocolor": "^0.0.5",
    "deep-map-object": "^0.0.5",
    "stylis": "^4.0.10"
  },
  "devDependencies": {
    "@types/stylis": "^4.0.1",
    "bundlesize": "^0.18.1",
    "esm": "^3.2.25",
    "shx": "^0.3.3",
    "typescript": "^4.4.3",
    "uvu": "^0.5.1"
  }
}
