{
  "name": "@barelyhuman/stone",
  "version": "0.0.5",
  "description": "Framework Agnostic Theme based css-in-js",
  "main": "dist/index.js",
  "repository": "git@github.com:barelyhuman/stone.git",
  "author": "Reaper <ahoy@barelyhuman.dev>",
  "license": "MIT",
  "types": "dist/*.d.ts",
  "files": [
    "dist/*"
  ],
  "keywords": [
    "css-in-js",
    "stone",
    "css",
    "framework agnostic",
    "style"
  ],
  "scripts": {
    "prebuild": "shx rm -rf dist",
    "build": "tsc",
    "watch": "tsc -w",
    "fix": "standard --fix",
    "test": "uvu -r esm tests",
    "size": "GITHUB_TOKEN='' bundlesize",
    "prepublishOnly": "npm run build;npm run size;",
    "prepare": "husky install"
  },
  "bundlesize": [
    {
      "path": "./dist/**/*.js",
      "maxSize": "4 kB",
      "compression": "brotli"
    },
    {
      "path": "./dist/**/*.js",
      "maxSize": "4 kB"
    }
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@barelyhuman/tocolor": "^0.0.5",
    "deep-map-object": "^0.0.5",
    "stylis": "^4.0.10"
  },
  "devDependencies": {
    "@barelyhuman/stone-cli": "^0.0.3",
    "@types/node": "^16.10.2",
    "@types/stylis": "^4.0.1",
    "bundlesize": "^0.18.1",
    "esm": "^3.2.25",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "shx": "^0.3.3",
    "standard": "^16.0.3",
    "typescript": "^4.4.3",
    "uvu": "^0.5.1"
  },
  "lint-staged": {
    "*.{js}": [
      "npm run fix"
    ]
  }
}
