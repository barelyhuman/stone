{
  "name": "@barelyhuman/stone",
  "version": "0.0.5",
  "description": "Framework Agnostic Theme based css-in-js",
  "main": "dist/index.js",
  "source": "src/index.js",
  "module": "dist/index.esm.js",
  "repository": "git@github.com:barelyhuman/stone.git",
  "author": "Reaper <ahoy@barelyhuman.dev>",
  "license": "MIT",
  "types": "index.d.ts",
  "exports": {
    "import": "./dist/index.esm.js",
    "require": "./dist/index.js"
  },
  "files": [
    "dist/*",
    "index.d.ts"
  ],
  "keywords": [
    "css-in-js",
    "stone",
    "css",
    "framework agnostic",
    "style"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "wrap",
    "watch": "wrap -w",
    "fix": "wrap --fix",
    "test": "uvu -r esm tests",
    "size": "GITHUB_TOKEN='' bundlesize",
    "prepublishOnly": "npm run build; npm run size;"
  },
  "wrap": {
    "external": [
      "tocolor"
    ]
  },
  "bundlesize": [
    {
      "path": "./dist/index.js",
      "maxSize": "4 kB",
      "compression": "brotli"
    },
    {
      "path": "./dist/index.esm.js",
      "maxSize": "4 kB",
      "compression": "brotli"
    },
    {
      "path": "./dist/index.js",
      "maxSize": "4 kB"
    },
    {
      "path": "./dist/index.esm.js",
      "maxSize": "4 kB"
    }
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@barelyhuman/tocolor": "^0.0.5",
    "deep-map-object": "^0.0.5",
    "stylis": "^4.0.10"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@barelyhuman/wrap": "^0.0.8-1",
    "@rollup/plugin-babel": "^5.3.0",
    "bundlesize": "^0.18.1",
    "esm": "^3.2.25",
    "rollup": "^2.56.3",
    "rollup-plugin-terser": "^7.0.2",
    "shx": "^0.3.3",
    "uvu": "^0.5.1"
  }
}
